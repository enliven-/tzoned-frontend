New Timezone

<form>
  <div class="form-group">
    <label>Abbr</label>
    {{input type="text" class="form-control" value=abbr placeholder="Abbreviation" }}
  </div>

  <div class="form-group">
    <label>Name</label>
    {{input type="text" class="form-control" value=name placeholder="Name" }}
  </div>

  <div class="form-group">
    <label>City</label>
    {{input type="text" class="form-control" value=city placeholder="City" }}
  </div>

  <div class="form-group">
    <label>Gmt Difference</label>
    {{input type="text" class="form-control" value=gmt_difference placeholder="GMT Difference" }}  
  </div>

  <button {{action "addTimezone"}} class="btn btn-primary">Submit</button>
</form>