Edit Timezone

<form>
  <div class="form-group">
    <label>Name</label>
    {{input type="text" class="form-control" value=model.name placeholder="Name"}}
  </div>
  <div class="form-group">
    <label>Abbr</label>
    {{input type="text" class="form-control" value=model.abbr placeholder="Abbreviation"}}
  </div>
  <div class="form-group">
    <label>Gmt Difference</label>
    {{input type="text" class="form-control" value=model.gmt_difference placeholder="GMT Difference"}}
  </div>
  <button {{action "updateTimezone" model.id}} class="btn btn-primary">Submit</button>
</form>