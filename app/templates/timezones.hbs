{{outlet}}
<br/><br/>

<div class="input-group"> <span class="input-group-addon">Filter</span>
  <input id="filter" type="text" class="form-control" placeholder="Filter Timezones">
</div>

<h3>Timezones</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Abbr</th>
      <th>Name</th>
      <th>Current Time</th>
      <th>Owner</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody class="searchable">
  {{#each model as |timezone|}}
    <tr>
      <td>{{timezone.abbr}}</td>
      <td>{{timezone.name}} </td>
      <td>{{timezone.gmt_difference}}</td>
      <td>{{timezone.user_email}}</td>
      <td>{{#link-to "timezones.edit" timezone.id class="btn btn-xs btn-info"}}Edit{{/link-to}}</td>
      <td><button {{ action "deleteTimezone" timezone.id }} class="btn btn-xs btn-danger">Delete</button></td>
    </tr>
  {{/each}}
  </tbody>
</table>

<script type="text/javascript">
  $(document).ready(function () {

    (function ($) {

        $('#filter').keyup(function () {

            var rex = new RegExp($(this).val(), 'i');
            $('.searchable tr').hide();
            $('.searchable tr').filter(function () {
                return rex.test($(this).text());
            }).show();

        })

    }(jQuery));

});
</script>

