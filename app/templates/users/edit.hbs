<form>
  <div class="form-group">
    <label>Email</label>
    {{validated-input name="email" type="text" value=model.email placeholder="Email" errors=errors.model.email }}
  </div>
  <div class="form-group">
    <label>Role</label>
    {{#x-select value=model.role class="form-control" }}
      {{#x-option value="regular"}}Regular{{/x-option}}
      {{#x-option value="manager"}}Manager{{/x-option}}
      {{#x-option value="admin"}}Admin{{/x-option}}
    {{/x-select}}
  </div>
  <div class="form-group">
    <label>Reset Password</label>
    {{validated-input name="password" type="password" value=password placeholder="Password" errors=errors.password }}
  </div>
  <button {{action "updateUser" model.id}} class="btn btn-primary">Submit</button>
</form>
